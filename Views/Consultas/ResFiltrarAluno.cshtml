@model IEnumerable<ADSAlunos2024.Models.Aluno>

@{
    ViewData["Title"] = "ResFiltrarAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filtro de Alunos</h1>

<p>
    <a asp-action="FiltrarAluno">Filtrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aniversario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.curso.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.periodo)
            </td>

        </tr>
}
    </tbody>
</table>
