@model ADSAlunos2024.Models.Aluno

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar Aluno</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="aniversario" class="control-label"></label>
                <input asp-for="aniversario" class="form-control" />
                <span asp-validation-for="aniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cursoID" class="control-label"></label>
                <select asp-for="cursoID" class ="form-control" asp-items="ViewBag.cursoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="periodo" class="control-label"></label>
                <select asp-for="periodo" class="form-control"></select>
                <span asp-validation-for="periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listar Alunos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
