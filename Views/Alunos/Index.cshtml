@model IEnumerable<ADSAlunos2024.Models.Aluno>

@{
    ViewData["Title"] = "Index de Alunos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="index">

    <div class="form-group">
        <label class="control-label">Informe o NOME do Aluno</label>
        <input type="text" name="nome" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        <input type="submit" value="Filtrar" class="btn btn-primary" />
    </div>

    <br />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.curso.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aniversario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.curso.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.periodo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
